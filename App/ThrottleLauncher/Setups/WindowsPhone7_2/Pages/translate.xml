				<event type="LeftRightGesture">
				<action execute=":RunProcedure" parameters="ShowHidePanel(RowHome,translate.xml)" />
			</event>
        <panel name="bg_translate">
			
            <icon X="0" Y="0" height="55" width="240" path="#$THEME_BASE#\Widgets\WP7translate\images\#$Variable,BColor,map,[Light-Light|defalt-Dark]#\translate.png"/>
        </panel>
        <row name="Row_translate" X="0" Y="55" scrollingmode="Paged" width="#@Screen.Width#" layout="Rows" rows="2">
        <panel>
        <panel name="Textinput">
            <textinput X="10" Y="30" width="210" height="60" multiline="true" fonttype="12,false" fontcolor="#$Variable,BColor,map,[Light-0\,0\,0|defalt-255\,255\,255]#" output="GoogleTranslator.Input" default="Translate text..."/>
        </panel>
        <panel name="GoogleTranslator.Text" X="0" Y="155">
            <row name="GoogleTranslator.results" layout="cols" cols="1" width="200" height="180" marginY="5">

                <list name="GoogleTranslator_List" class="GoogleTranslator.Program" path="#$THROTTLE#\Plugins\Google\GoogleTranslator.dll">
                    <param name="romanize" value="true"/>
                    <items>
                        <text width="180" fontcolor="#$Variable,TColor,map,[Red-229\,20\,0|Green-51\,153\,51|Blue-27\,161\,226|Orange-240\,150\,9|Lime-140\,191\,38|Teal-0\,171\,169|Magenta-255\,0\,151|Pink-230\,113\,184|Brown-153\,102\,0|Purple-162\,0\,255]#" fonttype="#@GoogleTranslator.font#,12,false" text="#$Variable,GoogleTranslator_List[#@Index#].Translation#"/>
                    </items>
                </list>
            </row>
        </panel>
        
        <panel X="0" Y="100" name="Lang">
            <text name="Langin" X="5" Y="4" width="60" fontcolor="#$Variable,BColor,map,[Light-0\,0\,0|defalt-255\,255\,255]#" fonttype="9,false" 
            text="#$Registry,HKEY_LOCAL_MACHINE\Software\ThrottleLauncher\Translate\#$Variable,langin#\fulllang" exec=":SetVariable" params="source=in">
                <event type="Click">
                    <action execute=":Script" parameters="ListLang:FadeIn()"/>
                </event>
            </text>
            
            <text name="Langout" X="60" Y="4" width="80" fontcolor="#$Variable,BColor,map,[Light-0\,0\,0|defalt-255\,255\,255]#" fonttype="9,false" 
            text="->#$Registry,HKEY_LOCAL_MACHINE\Software\ThrottleLauncher\Translate\#$Variable,langout#\fulllang" exec=":SetVariable" params="source=out">
                <event type="Click">
                    <action execute=":Script" parameters="ListLang:FadeIn()"/>
                </event>
            </text>
            
            <text name="bouton" X="150" Y="0" width="90" fontcolor="#$Variable,BColor,map,[Light-0\,0\,0|defalt-255\,255\,255]#" fonttype="12,true" text="Translate">
                <event type="Click">
                    <action execute=":RunProcedure" parameters="GoogleTranslator.Translate()"/>
                </event>
            </text>

        </panel>
        
        <panel name="ListLang" X="0" Y="125" visible="false">
            <icon path="#$THEME_BASE#\Images\#$Variable,BColor,map,[Light-Light.png|defalt-BLACK.png]#" X="0" Y="0" height="#@Screen.Height#" width="#@Screen.Width#"/>
            <panel X="10" Y="0"> 
                <row scrollingmode="Kinetic" layout="Cols" cols="1" marginY="1" initPos="0" width="210" height="#$Expresion,#@Screen.Height#-205#">
                    <for each="lang" in="#$Registry,HKEY_LOCAL_MACHINE\Software\ThrottleLauncher\Translate\lang#">
                        <panel height="30" width="210">
                            <icon path="#$THEME_BASE#\Images\#$Variable,BColor,map,[Light-BLACK.png|defalt-Light.png]#" X="0" Y="0" height="30" width="210">
                            <event type="Click">                                    
                                <action execute=":SetVariable" parameters="lang#$Variable,source#=#@lang#"/>                                    
                                <action execute=":Script" parameters="ListLang:Set(Visible,false)"/>                                
                            </event>  
                            </icon> 
                            <text name="Langout" X="15" Y="2" fontcolor="#$Variable,BColor,map,[Light-255\,255\,255|defalt-0\,0\,0]#" fonttype="Segoe UI Light,15,true" alignment="Near" text="#$Registry,HKEY_LOCAL_MACHINE\Software\ThrottleLauncher\Translate\#@lang#\fulllang"/>
                        </panel>
                    </for>
                </row>
            </panel>        
        </panel>
        </panel>
        <pagebreak/>
        <panel>
        <panel name="Textinput">
            <textinput X="10" Y="30" width="200" height="18" multiline="false" fonttype="12,false" fontcolor="#$Variable,BColor,map,[Light-0\,0\,0|defalt-255\,255\,255]#" output="GoogleDictionary.Input" default="Dictionary"/>
            <text name="bouton" X="150" Y="60" width="90" fontcolor="#$Variable,BColor,map,[Light-0\,0\,0|defalt-255\,255\,255]#" fonttype="12,true" text="Dictionary">
            <event type="Click">
                <action execute=":RunProcedure" parameters="GoogleDictionary.Define()"/>
            </event>
            </text>
        </panel>

        <panel>
            <row width="240" X="0" Y="85" height="#$Expression,#@Screen.Height#-190#" marginY="3" layout="Cols" cols="1">
                <list name="GoogleDictionary" class="GoogleTranslator.Program" path="#$THROTTLE#\Plugins\Google\GoogleTranslator.dll">
                <param name="romanize" value="true"/>
                <items>
                    <if name="#@Index#" value="0" not="true">
                        <panel>
                            <panel width="240"/>
                                <panel X="20" Y="4" layout="Cols" marginY="2" cols="1">
								
                                <text text="#$Variable,GoogleDictionary[#@Index#].Definition#" width="200" fontcolor="#$Variable,TColor,map,[Red-229\,20\,0|Green-51\,153\,51|Blue-27\,161\,226|Orange-240\,150\,9|Lime-140\,191\,38|Teal-0\,171\,169|Magenta-255\,0\,151|Pink-230\,113\,184|Brown-153\,102\,0|Purple-162\,0\,255]#" fonttype="7,false" />
                                
								
								<if name="#$Variable,langout#" value="fr" not="true">
                                    <panel marginY="2">
                                        <text text="#$Variable,GoogleDictionary[#@Index#].Translation#" width="200" fontcolor="192,192,192" fonttype="#@GoogleDictionary.font#,7,false" />
                                    </panel>
                                </if>
                            </panel>
                        </panel>
                    </if>
                </items>
            </list>
        </row>
    </panel>
	       
        <procedure name="GoogleTranslator.Translate" mode="Threaded">
            <if name="#@GoogleTranslator.append#" value="true">
                <then>
                    <action execute=":ToPlugin" parameters="GoogleTranslator_List:Translate(#$Variable,GoogleTranslator.Input#,ang=#$Variable,langin#:#$Variable,langout#)"/>
                </then>
                <else>
                    <action execute=":ToPlugin" parameters="GoogleTranslator_List:Translate(#$Variable,GoogleTranslator.Input#,lang=#$Variable,langin#:#$Variable,langout#,clear)"/>
                </else>
            </if>
        </procedure>
    <procedure name="GoogleDictionary.Define" mode="Threaded">
	<if name="#@Langdefaut#" value="en" not="true">
	<then>
	<action execute=":ToPlugin" parameters="GoogleDictionary:Define(#$Variable,GoogleDictionary.Input#,lang=en:#@Langdefaut#)"/>

	</then><else>
	<action execute=":ToPlugin" parameters="GoogleDictionary:Define(#$Variable,GoogleDictionary.Input#)"/>
	</else></if>
	</procedure>
      
      
    </panel>
    </row>
 
    </panel>
</root> 